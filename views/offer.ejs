<%- include('partials/header') %>
<div class="offer-wrapper part">
  <a href="/offer/<%= offer.id %>"> <%= offer.title %> </a>
  <p>
    <%= offer.text %> <br />
    <%= offer.price %> <br />
    <%= offer.author.name %> <br />
    <%= offer.author.email %> <br />
    <%= offer.author.phone %>
  </p>
  <% if (locals.user && (offer.author._id == locals.user.id)) { %> <% if
  (offer.public) { %> Veřejný <% } else { %> <u>Soukromý</u> <% } %> inzerát
  <br />
  <a href="/offer/<%= offer.id %>/edit">Upravit</a>
  <a href="/offer/<%= offer.id %>/delete">Smazat</a>
  <% } %>
</div>
<%- include('partials/footer') %>
